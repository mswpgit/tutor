CREATE TABLE `posts`
(
  `id`    INT(10)     UNSIGNED NOT NULL AUTO_INCREMENT,
  `title` VARCHAR(50) NOT NULL,
  `text`  LONGTEXT    NOT NULL,
  PRIMARY KEY (`id`)
)

INSERT INTO `posts` (`title`, `text`) VALUES (
  'Hello ZF2 Blog',
  'This is our first sample blogging application using Zend Framework 2 and Doctrine 2'
);
